{
  "functions": {
    "api/*.php": { "runtime": "vercel-php@0.7.4" }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*\\.css)", "dest": "/public/$1" },
    { "src": "/(.*\\.js)", "dest": "/public/$1" },
    { "src": "/", "dest": "/api/index.php" },
    { "src": "/buy", "dest": "/api/buy.php" }
  ]
}
